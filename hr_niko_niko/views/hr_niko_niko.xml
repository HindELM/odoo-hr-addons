<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hr_niko_niko_form" model="ir.ui.view">
        <field name="name">HR Niko Niko basic form view</field>
        <field name="model">hr.niko.niko</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Moods">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="icon"/>
                        <field name="active"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_niko_niko_tree" model="ir.ui.view">
        <field name="name">HR Niko Niko basic tree view</field>
        <field name="model">hr.niko.niko</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Moods">
                <field name="sequence" widget="handle" />
                <field name="name"/>
                <field name="icon"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_niko_nikos_form" model="ir.actions.act_window">
        <field name="name">Moods of Niko-Niko</field>
        <field name="res_model">hr.niko.niko</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_hr_niko_niko_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to define a new Mood of Niko.
            </p>
        </field>
    </record>

    <menuitem id="menu_action_warehouse_form"
              name="Moods of Niko-Niko"
              parent="hr_attendance.menu_hr_attendance_manage_attendances"
              sequence="42"
              groups="hr_attendance.group_hr_attendance_user"
              action="action_hr_niko_nikos_form"/>

</odoo>
