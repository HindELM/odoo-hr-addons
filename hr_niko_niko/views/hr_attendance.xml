<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_attendance_with_niko_niko_form" model="ir.ui.view">
        <field name="name">HR Attendance Form with working space</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="niko_niko_id"/>
            </field>
        </field>
    </record>
    <record id="hr_attendance_with_niko_niko_tree" model="ir.ui.view">
        <field name="name">HR Attendance Tree with working space</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="check_out" position="after">
                <field name="niko_niko_id"/>
            </field>
        </field>
    </record>

    <record id="hr_niko_niko_view_filter" model="ir.ui.view">
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter"/>
        <field name="name">HR Attendance filter with Mood of Niko-Niko</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <field name="department_id" position="after">
                <field name="niko_niko_id"/>
            </field>
            <filter name="groupby_check_out" position="after">
                <filter name="groupby_niko_niko" string="Mood of Niko-Niko" context="{'group_by':'niko_niko_id'}"/>
            </filter>
        </field>
    </record>

    <record id="resource_calendar_view_form" model="ir.ui.view">
        <field name="name">resource.calendar.view.form.inherit.hr.niko</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="after">
                <group name="niko">
                    <field name="niko_niko"/>
                    <field name="niko_from" widget="float_time" attrs="{'required': [('niko_niko', '!=', False)]}"/>
                    <field name="niko_to" widget="float_time" attrs="{'required': [('niko_niko', '!=', False)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
